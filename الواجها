<script>
function showSection(sectionId) {
  const sections = document.querySelectorAll('.section');
  sections.forEach(sec => sec.classList.add('hidden'));
  document.getElementById(sectionId).classList.remove('hidden');
}

// مثال تسجيل لاعب
let playerData = {};
function registerPlayer() {
  const username = document.getElementById("username").value;
  const email = document.getElementById("email").value;
  if(!username || !email) { alert("يرجى ملء جميع الحقول"); return; }
  playerData.username = username;
  playerData.email = email;
  alert("تم التسجيل بنجاح!");
}

// مثال تفعيل كود
function activateCode() {
  const code = document.getElementById("activationCode").value;
  if(code === "1234") alert("تم التفعيل بنجاح!");
  else alert("الكود غير صحيح");
}

// إرسال الاقتراح
function submitSuggestion() {
  const suggestion = document.getElementById("suggestionText").value;
  if(!suggestion) { alert("اكتب اقتراحك"); return; }
  alert("تم إرسال اقتراحك! شكرًا لك.");
  document.getElementById("suggestionText").value = "";
}
</script>

